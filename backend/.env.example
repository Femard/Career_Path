# --- Fournisseur IA ---
# "claude" ou "ollama"
AI_PROVIDER=ollama

# Claude API (requis si AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama (requis si AI_PROVIDER=ollama)
# En local :         OLLAMA_BASE_URL=http://localhost:11434
# En Docker (prod) : OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:7b

# Base de données — /app/data/ est monté en volume Docker
DATABASE_URL=sqlite:////app/data/career_path.db

# CORS — en prod, mettre * ou l'IP/domaine Oracle
CORS_ORIGINS=*
